<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/row_item_padding_vertical"
    android:paddingEnd="@dimen/row_item_padding_horizontal"
    android:paddingStart="@dimen/row_item_padding_horizontal"
    android:paddingTop="@dimen/row_item_padding_vertical">

    <ImageView
        android:id="@+id/flag"
        style="@style/row_item_icon_flag" />

    <LinearLayout
        style="@style/row_item_txt_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/countryName"
            style="@style/row_item_txt_countryName" />

        <TextView
            android:id="@+id/currencyName"
            style="@style/row_item_txt_currencyName" />
    </LinearLayout>

    <TextView
        android:id="@+id/currencySymbol"
        style="@style/row_item_txt_currencySymbol" />

</LinearLayout>